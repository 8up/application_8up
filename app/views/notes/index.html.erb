<h1>Listing notes</h1>

<table>
  <tr>
	<th>Note ID</th>
    <th>Header</th>
    <th>Body</th>
    <th>Position x</th>
    <th>Position y</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
	<td><%= note.id %></td>
    <td><%= note.header %></td>
    <td><%= note.body %></td>
    <td><%= note.position_x %></td>
    <td><%= note.position_y %></td>
    <td><%= note.owner_id %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

