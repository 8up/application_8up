<%= javascript_include_tag "http://#{@faye_adress}:#{@faye_port}/faye.js" %>

<script type="text/javascript">
  window.current_user_name = "<%= current_user().name %>";
  window.current_user = <%= current_user.id %>;

  window.faye = new Faye.Client("<%="http://#{@faye_adress}:#{@faye_port}/faye"%>");
  <% if @board %>
  window.page_context = "whiteboard";
  window.current_board = <%= @board.id %>; 
  <% else %>
  window.page_context = "start_page";
  <% end %>
  
</script>
