<%= form_tag :action => 'change_password' do %> 

<br><br>
<p>
  <label for="old_password">Enter Old Password</label>
  <br>
  <input id="old_password" name="password[old_password]" size="30" type="text">
</p>

<p>
  <label for="new_password">Enter New Password</label>
  <br>
  <input id="new_password" name="password[new_password]" size="30" type="text">
</p>

<p>
  <label for="confirm_password">Confirm Password</label>
  <br>
  <input id="confirm_password" name="password[new_password_confirmation]" size="30" type="text">
</p>

<%= submit_tag %>


<% end %> 